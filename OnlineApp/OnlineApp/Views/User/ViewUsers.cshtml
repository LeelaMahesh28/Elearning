<!DOCTYPE html>
<html>
<body>
    @model IEnumerable<OnlineApp.Models.Users>

    @{
        ViewBag.Title = "ViewUsers";
    }

    <h2>View Users</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(Users => Users.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(Users => Users.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(Users => Users.UserPassword)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(m => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.UserPassword)
                </td>
                <td>
                    @Html.ActionLink("Delete User", "Delete", new { id = item.UserId })
                </td>

            </tr>
        }
        <div>
            @Html.ActionLink("Back to List", "ViewAdminCourses")
        </div>
    </table>
    <style>
        body {
            background-image: url('https://www.theselfemployed.com/wp-content/uploads/2016/09/ecommerce-sales.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 100%;
            opacity: 1.5;
            text-align: center;
            color: black;
            font-weight: bolder;
        }

        table {
            border-collapse: collapse;
            width: 100%;
           
        }

        th {
            text-align: left;
            padding: 8px;
            background-color: mediumseagreen;
            color: white;
        }

        tr:nth-child(even) {
            background-color: lightseagreen;
            color: black;
        }

        tr:nth-child(odd) {
            background-color: white;
            color: black;
        }
    </style>
</body>
</html>
